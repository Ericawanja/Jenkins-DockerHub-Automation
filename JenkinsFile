pipeline{
    agent any
    stages{
        stage('Build'){
           steps{
               sh 'docker build -t ericawanja/todoapp:latest .'
           }
        }
        
        stage('Login'){
            steps {
                sh 'echo'
            }
        }
        stage('Push'){
            steps{
                //Deploy our app to DockerHub
                sh 'docker push ericawanja/todoapp:latest'
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}